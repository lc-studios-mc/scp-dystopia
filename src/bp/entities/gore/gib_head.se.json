{
	"format_version": "1.21.80",
	"minecraft:entity": {
		"description": {
			"identifier": "lc:scpdy_gib_head",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false,
			"scripts": {
				"animate": ["ctrl.main"]
			},
			"animations": {
				"ctrl.main": "controller.animation.scpdy.bp.gib.main"
			},
			"properties": {
				"lc:yaw": {
					"type": "float",
					"range": [-180.0, 180.0],
					"default": 0.0,
					"client_sync": true
				},
				"lc:emit_blood": {
					"type": "bool",
					"default": true,
					"client_sync": true
				},
				"lc:is_falling": {
					"type": "bool",
					"default": true,
					"client_sync": true
				},
				"lc:is_despawning": {
					"type": "bool",
					"default": false,
					"client_sync": true
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": ["inanimate", "gib"]
			},
			"minecraft:knockback_resistance": {
				"value": 0.1
			},
			"minecraft:health": {
				"value": 6,
				"max": 6
			},
			"minecraft:breathable": {
				"breathes_solids": true,
				"breathes_water": true,
				"generates_bubbles": false
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": "no"
					}
				]
			},
			"minecraft:interact": {
				"interactions": [
					{
						"on_interact": {
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							}
						},
						"cooldown": 0.1,
						"swing": true
					}
				]
			},
			"minecraft:friction_modifier": {
				"value": 1.08
			},
			"minecraft:movement_sound_distance_offset": {
				"value": 0.3
			},
			"minecraft:collision_box": {
				"width": 0.4,
				"height": 0.4
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {
				"default_values": {
					"max_optimized_distance": 30.0,
					"max_dropped_ticks": 10,
					"use_motion_prediction_hints": true
				},
				"conditional_values": [
					{
						"max_optimized_distance": 0.0,
						"max_dropped_ticks": 0,
						"use_motion_prediction_hints": true,
						"conditional_values": [
							{
								"test": "on_ground",
								"subject": "self",
								"operator": "!="
							}
						]
					}
				]
			},
			"minecraft:is_stackable": {},
			"minecraft:body_rotation_blocked": {}
		},
		"component_groups": {
			"just_spawned_timer": {
				"minecraft:timer": {
					"looping": false,
					"randomInterval": true,
					"time": [5, 10],
					"time_down_event": {
						"event": "lc:start_pre_despawn_timer",
						"target": "self"
					}
				}
			},
			"pre_despawn_timer": {
				"minecraft:timer": {
					"looping": false,
					"randomInterval": true,
					"time": [60, 80], // How long should this gib stay in the world for
					"time_down_event": {
						"event": "lc:start_despawn_timer",
						"target": "self"
					}
				}
			},
			"despawn_timer": {
				"minecraft:timer": {
					"looping": false,
					"randomInterval": false,
					"time": 0.7,
					"time_down_event": {
						"event": "despawn",
						"target": "self"
					}
				}
			},
			"despawn": {
				"minecraft:instant_despawn": {}
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": ["just_spawned_timer"]
				}
			},
			"lc:on_grounded": {
				"set_property": {
					"lc:is_falling": false
				}
			},
			"lc:start_pre_despawn_timer": {
				"add": {
					"component_groups": ["pre_despawn_timer"]
				},
				"remove": {
					"component_groups": ["just_spawned_timer"]
				},
				"set_property": {
					"lc:emit_blood": false
				}
			},
			"lc:start_despawn_timer": {
				"add": {
					"component_groups": ["despawn_timer"]
				},
				"remove": {
					"component_groups": ["pre_despawn_timer"]
				},
				"set_property": {
					"lc:is_despawning": true
				}
			},
			"despawn": {
				"add": {
					"component_groups": ["despawn"]
				}
			}
		}
	}
}
