				"sequence": [
					{
						"filters": {
							"test": "int_property",
							"domain": "lc:combat_mode",
							"operator": "==",
							"value": 0
						},
						"add": {
							"component_groups": ["g36c_ranged_attack"]
						}
					},
					{
						"remove": {
							"component_groups": ["melee_attack"]
						}
					}
				]
			},
			"lc:stop_combat": {
				"remove": {
					"component_groups": ["g36c_ranged_attack", "melee_range_sensor", "melee_attack"]
