{
	"format_version": "1.21.80",
	"minecraft:entity": {
		"description": {
			"identifier": "lc:scpdy_f_researcher",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"properties": {
				"lc:is_stationary": {
					"type": "bool",
					"default": false
				}
			}
		},
		"components": {
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": ["mob", "villager", "human", "scpf", "scp_foundation", "researcher"]
			},
			"minecraft:health": {
				"value": 22,
				"max": 22
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:damage_sensor": {
				"triggers": [
					// Don't take damage from members of the same faction
					{
						"on_damage": {
							"filters": { "test": "is_family", "subject": "other", "value": "scp_foundation" }
						},
						"deals_damage": "no"
					},

					// Don't take damage from weapons of the same faction
					{
						"on_damage": {
							"filters": { "test": "is_family", "subject": "damager", "value": "scpf_weapon" }
						},
						"deals_damage": "no"
					},

					// Fatality (instant body explosion)
					{
						"on_damage": {
							"filters": { "test": "has_damage", "value": "fatal" },
							"event": "lc:gib"
						},
						"cause": "entity_explosion",
						"deals_damage": "no_but_side_effects_apply"
					},

					// Fatality (transform into dead)
					{
						"on_damage": {
							"filters": { "test": "has_damage", "value": "fatal" },
							"event": "lc:transform_into_dead"
						},
						"deals_damage": "no_but_side_effects_apply"
					}
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:behavior.float": {
				"priority": 1
			},
			"minecraft:interact": {
				"interactions": [
					{
						"on_interact": {
							"filters": {
								"all_of": [
									{
										"test": "bool_property",
										"subject": "self",
										"domain": "lc:is_stationary",
										"operator": "!="
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "has_equipment",
										"domain": "hand",
										"subject": "other",
										"value": "lc:scpdy_mob_stationary_toggler"
									}
								]
							},
							"event": "lc:enable_stationary",
							"target": "self"
						},
						"cooldown": 0.1,
						"swing": true
					},
					{
						"on_interact": {
							"filters": {
								"all_of": [
									{
										"test": "bool_property",
										"subject": "self",
										"domain": "lc:is_stationary",
										"operator": "=="
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "has_equipment",
										"domain": "hand",
										"subject": "other",
										"value": "lc:scpdy_mob_stationary_toggler"
									}
								]
							},
							"event": "lc:disable_stationary",
							"target": "self"
						},
						"cooldown": 0.1,
						"swing": true
					}
				]
			},
			"minecraft:behavior.random_look_around": {
				"priority": 10
			},
			"minecraft:behavior.look_at_player": {
				"priority": 12,
				"look_distance": 5.0
			},
			"minecraft:behavior.look_at_entity": {
				"priority": 11,
				"look_distance": 4.0,
				"filters": { "test": "is_family", "subject": "other", "value": "researcher" },
				"probability": 0.01
			},
			"minecraft:movement": {
				"value": 0.3
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:navigation.walk": {
				"is_amphibious": true,
				"can_path_over_water": true,
				"can_pass_doors": true,
				"can_open_doors": true,
				"can_walk": true,
				"avoid_water": true
			},
			"minecraft:annotation.open_door": {},
			"minecraft:behavior.open_door": {
				"priority": 5,
				"close_door_after": true
			},
			"minecraft:behavior.move_indoors": {
				"priority": 5
			},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 1.9
			},
			"minecraft:physics": {},
			"minecraft:nameable": {},
			"minecraft:persistent": {},
			"minecraft:conditional_bandwidth_optimization": {}
		},
		"component_groups": {
			"var_0": { "minecraft:variant": { "value": 0 } },
			"var_1": { "minecraft:variant": { "value": 1 } },
			"var_2": { "minecraft:variant": { "value": 2 } },
			"var_3": { "minecraft:variant": { "value": 3 } },
			"var_4": { "minecraft:variant": { "value": 4 } },
			"var_5": { "minecraft:variant": { "value": 5 } },
			"move_freely": {
				"minecraft:movement": { "value": 0.3 },
				"minecraft:behavior.panic": {
					"priority": 1,
					"speed_multiplier": 1.3
				},
				"minecraft:behavior.avoid_mob_type": {
					"priority": 0,
					"entity_types": [
						// Avoid explosives (frag grenades)
						{
							"filters": {
								"any_of": [
									{ "test": "has_component", "subject": "other", "value": "minecraft:explode" },
									{ "test": "is_family", "subject": "other", "value": "frag_grenade" }
								]
							},
							"max_dist": 8,
							"walk_speed_multiplier": 1.1,
							"sprint_speed_multiplier": 1.3
						},

						// Avoid anyone fighting
						{
							"filters": {
								"test": "has_target",
								"subject": "other"
							},
							"max_dist": 7,
							"walk_speed_multiplier": 1.0,
							"sprint_speed_multiplier": 1.2
						},

						// Avoid enemies
						{
							"filters": {
								"all_of": [
									{ "test": "has_tag", "subject": "other", "operator": "!=", "value": "scpdy_faction_scpf" },
									{ "test": "is_family", "subject": "other", "operator": "!=", "value": "scp_foundation" },
									{
										"any_of": [
											{ "test": "was_last_hurt_by", "subject": "other" },
											{ "test": "has_tag", "subject": "other", "value": "scpdy_faction_ci" },
											{ "test": "is_family", "subject": "other", "value": "monster" },
											{ "test": "is_family", "subject": "other", "value": "hostile_scp" },
											{ "test": "is_family", "subject": "other", "value": "chaos" },
											{ "test": "is_family", "subject": "other", "value": "ci" }
										]
									}
								]
							},
							"max_dist": 15,
							"walk_speed_multiplier": 1.2,
							"sprint_speed_multiplier": 1.4
						}
					]
				},
				"minecraft:behavior.inspect_bookshelf": {
					"priority": 4,
					"search_range": 5,
					"speed_multiplier": 0.9
				},
				"minecraft:behavior.random_stroll": {
					"priority": 13,
					"xz_dist": 4,
					"speed_multiplier": 0.72
				},
				"minecraft:behavior.move_to_block": {
					"priority": 14,
					"goal_radius": 1.2,
					"search_range": 3,
					"speed_multiplier": 0.7,
					"target_blocks": ["lc:scpdy_office_chair_1", "lc:scpdy_office_chair_2", "lc:scpdy_office_chair_3"],
					"target_selection_method": "random"
				},
				"minecraft:pushable": {
					"is_pushable": true,
					"is_pushable_by_piston": true
				}
			},
			"stationary": {
				"minecraft:movement": { "value": 0.0 },
				"minecraft:pushable": {
					"is_pushable": false,
					"is_pushable_by_piston": false
				}
			},
			"not_tamed": {
				"minecraft:tameable": {
					"probability": 1.0,
					"tame_items": "lc:scpdy_tame_scpf_mob",
					"tame_event": {
						"event": "minecraft:on_tame",
						"target": "self"
					}
				}
			},
			"tamed": {
				"minecraft:is_tamed": {},
				"minecraft:behavior.teleport_to_owner": {
					"priority": 1,
					"filters": {
						"all_of": [
							{
								"test": "owner_distance",
								"operator": ">",
								"value": 24
							},
							{ "test": "has_target" }
						]
					}
				},
				"minecraft:behavior.follow_owner": {
					"priority": 3,
					"speed_multiplier": 0.9,
					"start_distance": 10,
					"stop_distance": 2
				},
				"minecraft:behavior.stay_while_sitting": {
					"priority": 3
				},
				"minecraft:sittable": {}
			},
			"transform_into_dead": {
				"minecraft:transformation": {
					"drop_equipment": true,
					"drop_inventory": true,
					"into": "lc:scpdy_f_researcher_dead"
				}
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"sequence": [
					{
						"add": {
							"component_groups": ["not_tamed", "move_freely"]
						}
					},
					{
						"trigger": "randomize_variant"
					}
				]
			},
			"minecraft:on_tame": {
				"add": {
					"component_groups": ["tamed"]
				},
				"remove": {
					"component_groups": ["not_tamed"]
				}
			},
			"randomize_variant": {
				"randomize": [
					{
						"weight": 1,
						"add": { "component_groups": ["var_0"] }
					},
					{
						"weight": 1,
						"add": { "component_groups": ["var_1"] }
					},
					{
						"weight": 1,
						"add": { "component_groups": ["var_2"] }
					},
					{
						"weight": 1,
						"add": { "component_groups": ["var_3"] }
					},
					{
						"weight": 1,
						"add": { "component_groups": ["var_4"] }
					},
					{
						"weight": 1,
						"add": { "component_groups": ["var_5"] }
					}
				]
			},
			"lc:enable_stationary": {
				"add": {
					"component_groups": ["stationary"]
				},
				"remove": {
					"component_groups": ["move_freely"]
				},
				"set_property": {
					"lc:is_stationary": true
				}
			},
			"lc:disable_stationary": {
				"add": {
					"component_groups": ["move_freely"]
				},
				"remove": {
					"component_groups": ["stationary"]
				},
				"set_property": {
					"lc:is_stationary": false
				}
			},
			"lc:transform_into_dead": {
				"add": {
					"component_groups": ["transform_into_dead"]
				}
			},
			"lc:gib": {}
		}
	}
}
