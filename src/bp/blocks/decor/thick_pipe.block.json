{
	"format_version": "1.21.90",
	"minecraft:block": {
		"description": {
			"identifier": "lc:scpdy_thick_pipe",
			"menu_category": {
				"category": "construction"
			},
			"traits": {
				"minecraft:placement_position": {
					"enabled_states": ["minecraft:block_face"]
				}
			}
		},

		"components": {
			"minecraft:material_instances": {
				"*": {
					"texture": "scpdy_thick_pipe",
					"render_method": "opaque"
				}
			},
			"minecraft:geometry": {
				"identifier": "geometry.scpdy_thick_pipe"
			},
			"minecraft:display_name": "scpdy.decor.thick_pipe",
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"liquid_type": "water",
						"can_contain_liquid": true, // Waterloggable
						"on_liquid_touches": "no_reaction" // Water flows through the block like air
					}
				]
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 10,
				"item_specific_speeds": [
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:wooden_tier')"
						},
						"destroy_speed": 0.7
					},
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:stone_tier')"
						},
						"destroy_speed": 0.55
					},
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:iron_tier')"
						},
						"destroy_speed": 0.4
					},
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:diamond_tier')"
						},
						"destroy_speed": 0.3
					},
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:netherite_tier')"
						},
						"destroy_speed": 0.25
					},
					{
						"item": {
							"tags": "q.all_tags('minecraft:is_pickaxe', 'minecraft:golden_tier')"
						},
						"destroy_speed": 0.2
					}
				]
			},
			"minecraft:light_dampening": 3,
			"minecraft:selection_box": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 16]
			},
			"minecraft:collision_box": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 16]
			}
		},

		"permutations": [
			{
				"condition": "q.block_state('minecraft:block_face') == 'down' || q.block_state('minecraft:block_face') == 'up'",
				"components": {
					"minecraft:transformation": {
						"rotation": [90, 0, 0]
					}
				}
			},

			{
				"condition": "q.block_state('minecraft:block_face') == 'north' || q.block_state('minecraft:block_face') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, 180, 0]
					}
				}
			},

			{
				"condition": "q.block_state('minecraft:block_face') == 'west' || q.block_state('minecraft:block_face') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [0, 90, 0]
					}
				}
			}
		]
	}
}
