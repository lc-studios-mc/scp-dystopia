{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.scpdy.auto_frag_grenade.main": {
			"initial_state": "fly",
			"states": {
				"fly": {
					"animations": ["anim.fly"],
					"transitions": [{ "ground": "v.is_stopped" }],
					"blend_transition": 0.12
				},
				"ground": {
					"animations": ["anim.ground", "anim.bounce"]
				}
			}
		}
	}
}
