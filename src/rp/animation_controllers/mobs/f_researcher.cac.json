{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.scpdy.f_researcher.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{ "cuffed": "v.is_cuffed" },
						{ "unarmed": "!v.is_armed" },
						{ "armed": "v.is_armed" }
					]
				},

				"unarmed": {
					"animations": [
						"anim.look_at_target",
						"anim.walk.legs",
						"anim.walk.arms",
						"anim.idle",
						"anim.punch"
					],
					"transitions": [
						{ "pickup_gun": "v.is_armed" },
						{ "faltered": "v.is_faltered" },
						{ "cuffed": "v.is_cuffed" }
					],
					"blend_transition": 0.2
				},

				"pickup_gun": {
					"animations": ["anim.look_at_target", "anim.walk.legs", "anim.gun.pickup"],
					"transitions": [
						{ "armed": "q.all_animations_finished" },
						{ "faltered": "v.is_faltered" },
						{ "cuffed": "v.is_cuffed" }
					],
					"blend_transition": 0.2
				},

				"armed": {
					"animations": ["ctrl.armed"],
					"transitions": [
						{ "unarmed": "!v.is_armed" },
						{ "faltered": "v.is_faltered" },
						{ "cuffed": "v.is_cuffed" }
					],
					"blend_transition": 0.2
				},

				"faltered": {
					"animations": ["anim.walk.legs", "anim.walk.arms", "anim.faltered"],
					"transitions": [
						{ "unarmed": "!v.is_faltered && !v.is_armed" },
						{ "armed": "!v.is_faltered && v.is_armed" },
						{ "cuffed": "v.is_cuffed" }
					],
					"blend_transition": 0.2
				},

				"cuffed": {
					"animations": ["anim.look_at_target", "anim.walk.legs", "anim.cuffed"],
					"transitions": [
						{ "unarmed": "!v.is_cuffed" }
					],
					"blend_transition": 0.2
				}
			}
		},

		"controller.animation.scpdy.f_researcher.armed": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": ["anim.look_at_target", "anim.walk.legs", "anim.gun.hold"],
					"transitions": [
						{
							"aim": "q.has_target"
						}
					],
					"blend_transition": 0.2
				},

				"aim": {
					"animations": ["anim.look_at_target", "anim.walk.legs", "anim.gun.aim"],
					"transitions": [
						{
							"default": "!q.has_target"
						},
						{
							"reload": "v.is_reloading"
						}
					],
					"blend_transition": 0.2
				},

				"reload": {
					"animations": ["anim.look_at_target", "anim.walk.legs", "anim.gun.reload"],
					"transitions": [
						{
							"aim": "!v.is_reloading"
						}
					],
					"blend_transition": 0.16
				}
			}
		}
	}
}
