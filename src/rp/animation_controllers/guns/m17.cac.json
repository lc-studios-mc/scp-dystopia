{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.scpdy.gun.m17.fp.main": {
			"initial_state": "pickup",
			"states": {
				"pickup": {
					"animations": ["anim.fp.pickup"],
					"transitions": [
						{ "general": "q.all_animations_finished" },
						{ "fire_1": "v.is_firing" },
						{ "reload": "v.reload_cd" },
						{ "reload_tac": "v.reload_tac_cd" }
					]
				},
				"general": {
					"animations": ["anim.fp.general"],
					"transitions": [
						{ "pickup": "v.pickup_cd" },
						{ "fire_1": "v.is_firing" },
						{ "reload": "v.reload_cd" },
						{ "reload_tac": "v.reload_tac_cd" }
					]
				},
				"fire_1": {
					"animations": ["anim.fp.shoot"],
					"transitions": [
						{ "fire_2": "v.fire_2_cd" },
						{ "reload": "v.reload_cd" },
						{ "reload_tac": "v.reload_tac_cd" },
						{ "general": "q.all_animations_finished" }
					]
				},
				"fire_2": {
					"animations": ["anim.fp.shoot"],
					"transitions": [
						{ "fire_1": "v.fire_1_cd" },
						{ "reload": "v.reload_cd" },
						{ "reload_tac": "v.reload_tac_cd" },
						{ "general": "q.all_animations_finished" }
					]
				},
				"reload": {
					"animations": ["anim.fp.reload"],
					"transitions": [{ "general": "!v.reload_cd" }]
				},
				"reload_tac": {
					"animations": ["anim.fp.reload_tac"],
					"transitions": [{ "general": "!v.reload_tac_cd" }]
				}
			}
		},

		"controller.animation.scpdy.gun.m17.fp.extras": {
			"initial_state": "general",
			"states": {
				"general": {
					"animations": ["anim.fp.base", "anim.fp.bob", "anim.fp.ads"]
				}
			}
		}
	}
}
