{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {
			"identifier": "lc:scpdy_gib_limb",
			"materials": {
				"default": "entity_alphatest"
			},
			"textures": {
				"default": "textures/scpdy/gore/gib_limb"
			},
			"geometry": {
				"default": "geometry.scpdy_gib_limb"
			},
			"animations": {
				"ctrl.main": "controller.animation.scpdy.gib.main",

				"anim.fall": "animation.scpdy.gib.fall",
				"anim.bounce": "animation.scpdy.gib.bounce",
				"anim.ground": "animation.scpdy.gib.ground",
				"anim.yaw": "animation.scpdy.gib.yaw",
				"anim.emit_blood": "animation.scpdy.gib.emit_blood"
			},
			"scripts": {
				"scale": "v.scale",
				"animate": [
					"ctrl.main",
					"anim.yaw",
					{
						"anim.emit_blood": "v.emit_blood"
					}
				],

				"initialize": [
					"v.scale = 1.0;"
				],

				"pre_animation": [
					"v.ground_y_rot = q.modified_distance_moved * 30;",
					"v.yaw = q.property('lc:yaw');",
					"v.emit_blood = q.property('lc:emit_blood');",
					"v.is_falling = q.property('lc:is_falling');",
					"v.is_despawning = q.property('lc:is_despawning');",

					"v.scale = v.is_despawning ? math.lerp(v.scale, 0, q.delta_time * 2) : v.scale;"
				]
			},
			"particle_effects": {
				"blood_splash": "lc:scpdy_blood_splash_small_particle"
			},
			"render_controllers": ["controller.render.scpdy.gib.limb"]
		}
	}
}
