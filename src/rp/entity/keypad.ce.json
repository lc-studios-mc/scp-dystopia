{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {
			"identifier": "lc:scpdy_keypad",
			"materials": {
				"default": "entity_emissive_alpha"
			},
			"textures": {
				"off": "textures/scpdy/input_devices/keypad/off",
				"on": "textures/scpdy/input_devices/keypad/on"
			},
			"geometry": {
				"default": "geometry.scpdy_keypad"
			},
			"animations": {
				"anim.rotation": "animation.scpdy_keypad.general"
			},
			"scripts": {
				"animate": ["anim.rotation"],
				"initialize": ["v.is_on = false;", "v.rotation_y = 0.0;"],
				"pre_animation": [
					"v.is_on = q.property('lc:is_on');",
					"v.rotation_y = q.property('lc:rotation_y');"
				]
			},
			"render_controllers": ["controller.render.scpdy.keypad"]
		}
	}
}
