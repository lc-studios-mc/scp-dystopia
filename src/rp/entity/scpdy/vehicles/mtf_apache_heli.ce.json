{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {
			"identifier": "lc:scpdy_mtf_apache_heli",
			"materials": {
				"default": "entity"
			},
			"textures": {
				"default": "textures/scpdy/vehicles/mtf_apache_heli"
			},
			"geometry": {
				"default": "geometry.scpdy_mtf_apache_heli"
			},
			"animations": {
				"ctrl.main": "controller.animation.scpdy_mtf_apache_heli.main",
				"anim.land_idle": "animation.scpdy_mtf_apache_heli.land_idle",
				"anim.flying": "animation.scpdy_mtf_apache_heli.flying",
				"anim.body_facing": "animation.scpdy_mtf_apache_heli.body_facing",
				"anim.chaingun_facing": "animation.scpdy_mtf_apache_heli.chaingun_facing",
				"anim.propeller_rotation": "animation.scpdy_mtf_apache_heli.propeller_rotation"
			},
			"scripts": {
				"animate": ["ctrl.main"],
				// prettier-ignore
				"initialize": [
					"v.initial_yaw = q.body_y_rotation;",
					"v.body_rot_x = 0;",
					"v.body_rot_y = 0;"
				],
				"pre_animation": [
					"v.body_rot_x = math.lerprotate(v.body_rot_x, q.target_x_rotation / 2, q.delta_time);",
					"v.body_rot_y = math.lerprotate(v.body_rot_y, q.target_y_rotation, q.delta_time * (q.has_target ? 6 : 0.6));"
				]
			},
			"render_controllers": ["controller.render.scpdy.mtf_apache_heli"],
			"spawn_egg": {
				"base_color": "#423f3d",
				"overlay_color": "#363331"
			}
		}
	}
}
