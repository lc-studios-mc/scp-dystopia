{
  "format_version": "1.19.80",
  "minecraft:entity": {
    "description": {
      "identifier": "lc:scpdy_blood",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "properties": {
        "lc:state": {
          "type": "int",
          "range": [0, 2],
          "default": 0,
          "client_sync": true
        },
        "lc:visual_rotation_y": {
          "type": "float",
          "range": [-0.0, 360.0],
          "default": 0.0,
          "client_sync": true
        },
        "lc:visual_offset_y": {
          "type": "float",
          "range": [-0.1, 0.1],
          "default": 0.0,
          "client_sync": true
        }
      }
    },
    "component_groups": {
      "despawn_timer": {
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 30,
          "time_down_event": {
            "event": "despawn",
            "target": "self"
          }
        }
      },
      "despawn": {
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:type_family": {
        "family": ["inanimate", "blood"]
      },
      "minecraft:health": {
        "value": 6,
        "max": 6
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:breathable": {
        "breathes_solids": true,
        "breathes_water": true,
        "generates_bubbles": false
      },
      "minecraft:body_rotation_blocked": {},
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:collision_box": {
        "width": 0.1,
        "height": 0.1
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 20.0,
          "max_dropped_ticks": 10,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["despawn_timer"]
        },
        "trigger": "blood:reset_visual_props"
      },
      "despawn": {
        "add": {
          "component_groups": ["despawn"]
        }
      },
      "blood:reset_visual_props": {
        "set_property": {
          "lc:visual_rotation_y": "Math.random(0.0, 360.0)",
          "lc:visual_offset_y": "Math.random(-0.1, 0.1)"
        }
      },
      "blood:spawn_persistent": {
        "trigger": "blood:reset_visual_props"
      },
      "blood:start_spreading_slow": {
        "set_property": {
          "lc:state": 1
        }
      },
      "blood:start_spreading_fast": {
        "set_property": {
          "lc:state": 2
        }
      }
    }
  }
}
