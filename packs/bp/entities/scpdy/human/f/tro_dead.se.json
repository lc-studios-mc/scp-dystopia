{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "lc:scpdy_f_tro_dead",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "properties": {
        "lc:death_anim_index": {
          "type": "int",
          "range": [0, 2],
          "default": 0,
          "client_sync": true
        },
        "lc:is_just_spawned": {
          "type": "bool",
          "default": true,
          "client_sync": true
        },
        "lc:was_transformed": {
          "type": "bool",
          "default": false
        }
      }
    },
    "component_groups": {
      "var_0": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "just_spawned_timer": {
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 0.5,
          "time_down_event": {
            "event": "dead_human:on_just_spawned_timer_end",
            "target": "self"
          }
        }
      },
      "despawn_timer": {
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 90.0,
          "time_down_event": {
            "event": "despawn",
            "target": "self"
          }
        }
      },
      "despawn": {
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:is_hidden_when_invisible": {},
      "minecraft:type_family": {
        "family": ["mob", "dead_body", "corpse", "scpdy_human_corpse"]
      },
      "minecraft:health": {
        "value": 14,
        "max": 14
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [{ "test": "is_family", "subject": "damager", "value": "scpdy_grenade" }]
              }
            },
            "cause": "entity_explosion",
            "damage_multiplier": 3.0
          }
        ]
      },
      "minecraft:breathable": {
        "breathes_water": true,
        "generates_bubbles": false
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 0.9
      },
      "minecraft:nameable": {},
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 30.0,
          "max_dropped_ticks": 10,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": ["just_spawned_timer"]
            }
          },
          { "trigger": "randomize_variant" },
          { "trigger": "randomize_death_anim_index" }
        ]
      },
      "randomize_variant": {
        "randomize": [
          {
            "weight": 1,
            "add": {
              "component_groups": ["var_0"]
            }
          }
        ]
      },
      "randomize_death_anim_index": {
        "set_property": { "lc:death_anim_index": "math.random_integer(0, 2)" }
      },
      "despawn": {
        "add": {
          "component_groups": ["despawn"]
        }
      },
      "minecraft:entity_transformed": {
        "sequence": [
          { "trigger": "randomize_death_anim_index" },
          { "set_property": { "lc:was_transformed": true } },
          {
            "add": {
              "component_groups": ["just_spawned_timer"]
            }
          },
          {
            "filters": { "test": "is_variant", "subject": "other", "value": 0 },
            "add": {
              "component_groups": ["var_0"]
            }
          }
        ]
      },
      "dead_human:on_just_spawned_timer_end": {
        "sequence": [
          { "set_property": { "lc:is_just_spawned": false } },
          {
            "filters": { "test": "bool_property", "domain": "lc:was_transformed" },
            "add": {
              "component_groups": ["despawn_timer"]
            }
          }
        ]
      },
      "dead_human:stop_despawn_timer": {
        "remove": {
          "component_groups": ["despawn_timer"]
        }
      }
    }
  }
}
