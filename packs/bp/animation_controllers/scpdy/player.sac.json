{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.scpdy.bp.player.arm_swing_trigger": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "attacking": "v.attack_time"
            }
          ]
        },
        "attacking": {
          "on_entry": [
            "@s player:on_arm_swing"
          ],
          "transitions": [
            {
              "default": "!v.attack_time"
            }
          ]
        }
      }
    }
  }
}
