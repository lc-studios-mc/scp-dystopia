        "category": "construction",
        "group": "itemGroup.name.construction"
      },
      "states": {
        "lc:is_activated": [false, true],
        "lc:is_zone_name_set": [false, true],
        "lc:facility_zone_index": { "values": { "min": 0, "max": 9 } }
