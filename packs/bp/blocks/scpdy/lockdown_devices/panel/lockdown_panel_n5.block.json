          "minecraft:geometry": "geometry.scpdy_lockdown_panel_on"
        }
      },
      {
        "condition": "!q.block_state('lc:is_activated')",
        "components": {
          "minecraft:geometry": "geometry.scpdy_lockdown_panel_off"
        }
      },
