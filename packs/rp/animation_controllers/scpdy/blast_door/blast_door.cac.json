{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.scpdy_blast_door": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "stay_opened": "v.is_open"
            },
            {
              "stay_closed": "!v.is_open"
            }
          ]
        },
        "stay_closed": {
          "animations": [
            "anim.stay_closed"
          ],
          "transitions": [
            {
              "opening": "v.is_open"
            }
          ]
        },
        "stay_opened": {
          "animations": [
            "anim.stay_opened"
          ],
          "transitions": [
            {
              "closing": "!v.is_open"
            }
          ]
        },
        "closing": {
          "animations": [
            "anim.close"
          ],
          "transitions": [
            {
              "stay_closed": "q.all_animations_finished"
            }
          ]
        },
        "opening": {
          "animations": [
            "anim.open"
          ],
          "transitions": [
            {
              "stay_opened": "q.all_animations_finished"
            }
          ]
        }
      }
    }
  }
}
