{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.scpdy_f_mtf_epsilon11.main": {
      "initial_state": "rifle_idle",
      "states": {
        "rifle_idle": {
          "animations": [
            "ctrl.rifle_idle"
          ],
          "transitions": [
            {
              "rifle_combat": "v.state == 1"
            },
            {
              "knife_stab": "v.state == 2"
            },
            {
              "frag_grenade_deploy": "v.state == 3"
            },
            {
              "scp096_fh": "v.state == 4 || v.state == 5"
            }
          ],
          "blend_transition": 0.13
        },
        "rifle_combat": {
          "animations": [
            "ctrl.rifle_combat"
          ],
          "transitions": [
            {
              "rifle_idle": "v.state == 0"
            },
            {
              "knife_stab": "v.state == 2"
            },
            {
              "frag_grenade_deploy": "v.state == 3"
            },
            {
              "scp096_fh": "v.state == 4 || v.state == 5"
            }
          ],
          "blend_transition": 0.13
        },
        "knife_stab": {
          "animations": [
            "anim.knife.stab",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "rifle_idle": "q.all_animations_finished"
            },
            {
              "rifle_combat": "v.state == 1"
            },
            {
              "frag_grenade_deploy": "v.state == 3"
            }
          ],
          "blend_transition": 0.13
        },
        "frag_grenade_deploy": {
          "animations": [
            "anim.frag_grenade.deploy"
          ],
          "transitions": [
            {
              "rifle_idle": "v.state == 0 || q.all_animations_finished"
            },
            {
              "rifle_combat": "v.state == 1"
            }
          ],
          "blend_transition": 0.13
        },
        "scp096_fh": {
          "animations": [
            "ctrl.scp096_fh"
          ],
          "transitions": [
            {
              "rifle_idle": "v.state != 4 && v.state != 5"
            }
          ],
          "blend_transition": 0.13
        }
      }
    },
    "controller.animation.scpdy_f_mtf_epsilon11.rifle_idle": {
      "initial_state": "rifle_idle",
      "states": {
        "rifle_idle": {
          "animations": [
            "anim.rifle.idle",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "rifle_walk": "q.modified_move_speed > 0.1"
            }
          ],
          "blend_transition": 0
        },
        "rifle_walk": {
          "animations": [
            "anim.rifle.walk",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "rifle_idle": "q.modified_move_speed <= 0.1"
            }
          ],
          "blend_transition": 0.135
        }
      }
    },
    "controller.animation.scpdy_f_mtf_epsilon11.rifle_combat": {
      "initial_state": "aim",
      "states": {
        "aim": {
          "animations": [
            "anim.rifle.aim",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "reload": "q.is_charged"
            }
          ],
          "blend_transition": 0.15
        },
        "reload": {
          "animations": [
            "anim.rifle.reload",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "aim": "!q.is_charged"
            }
          ],
          "blend_transition": 0.15
        }
      }
    },
    "controller.animation.scpdy_f_mtf_epsilon11.scp096_fh": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "anim.scp096_fh.ready",
            "anim.move.legs"
          ],
          "transitions": [
            {
              "covering": "v.state == 5"
            }
          ],
          "blend_transition": 0.2
        },
        "covering": {
          "animations": [
            "anim.scp096_fh.covering"
          ],
          "transitions": [
            {
              "covering": "v.state == 4"
            }
          ]
        }
      }
    }
  }
}